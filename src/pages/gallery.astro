---
// Gallery Page - Auto-populates from /public/gallery folder
import Layout from '../layouts/Layout.astro';
import fs from 'fs';
import { join } from 'path';

// Get all images from the public/gallery directory
let galleryImages = [];

try {
  const galleryPath = join(process.cwd(), 'public', 'gallery');
  
  // Check if gallery directory exists
  if (fs.existsSync(galleryPath)) {
    const files = fs.readdirSync(galleryPath);
    
    // Filter for image files only
    galleryImages = files
      .filter(file => /\.(jpg|jpeg|png|gif|webp)$/i.test(file))
      .map(file => ({
        src: `/gallery/${file}`,
        alt: file.replace(/\.[^/.]+$/, '').replace(/[-_]/g, ' '), // Use filename as alt text
        filename: file
      }));
  }
} catch (e) {
  console.error('Error reading gallery directory:', e);
}

// If no images, create placeholder cards
const hasImages = galleryImages.length > 0;
---

