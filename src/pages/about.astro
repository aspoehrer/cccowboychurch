<style>
  .page-header {
    background: linear-gradient(135deg, var(--color-primary-dark) 0%, var(--color-primary) 100%);
    color: var(--color-white);
    padding: var(--spacing-xl) 0;
    text-align: center;
  }

  .page-header h1 {
    color: var(--color-white);
    font-size: 3rem;
    margin-bottom: var(--spacing-sm);
  }

  .page-header .lead {
    color: var(--color-accent);
    font-size: 1.3rem;
  }

  /* Vision Points */
  .vision-points {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--spacing-md);
    margin-top: var(--spacing-lg);
  }

  .vision-point {
    text-align: center;
    padding: var(--spacing-md);
  }

  .vision-icon {
    font-size: 3rem;
    margin-bottom: var(--spacing-sm);
  }

  .vision-point h3 {
    color: var(--color-primary);
    margin-bottom: var(--spacing-xs);
  }

  /* Leadership Grid */
  .leadership-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--spacing-lg);
    margin-top: var(--spacing-lg);
  }

  .leader-card {
    background-color: var(--color-white);
    border-radius: var(--radius-lg);
    padding: var(--spacing-md);
    box-shadow: var(--shadow-md);
    text-align: center;
  }

  .leader-photo-placeholder {
    width: 150px;
    height: 150px;
    margin: 0 auto var(--spacing-sm);
    background-color: var(--color-gray-light);
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border: 3px solid var(--color-accent);
  }

  .leader-photo-placeholder span {
    font-size: 3rem;
  }

  .leader-photo-placeholder p {
    margin: 0;
    color: var(--color-gray-dark);
    font-size: 0.9rem;
  }

  .leader-card h3 {
    color: var(--color-primary);
    margin-bottom: var(--spacing-xs);
  }

  .leader-title {
    color: var(--color-accent);
    font-weight: 600;
    font-style: italic;
    margin-bottom: var(--spacing-sm);
  }

  .leader-bio {
    color: var(--color-text-light);
    line-height: 1.6;
  }

  /* Beliefs List */
  .beliefs-list {
    margin-top: var(--spacing-lg);
  }

  .belief-item {
    padding: var(--spacing-md);
    margin-bottom: var(--spacing-sm);
    border-left: 4px solid var(--color-accent);
    background-color: var(--color-white);
    border-radius: var(--radius-sm);
  }

  .belief-item h3 {
    color: var(--color-primary);
    margin-bottom: var(--spacing-xs);
    font-size: 1.2rem;
  }

  .belief-item p {
    margin-bottom: 0;
    color: var(--color-text-light);
  }

  /* Pastor's Welcome */
  .pastor-title {
    color: var(--color-accent);
    font-style: italic;
    margin-bottom: var(--spacing-md);
  }

  .pastor-signature {
    font-style: italic;
    margin-top: var(--spacing-md);
  }

  .pastor-welcome-container {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: var(--spacing-lg);
    align-items: start;
    margin-top: var(--spacing-lg);
  }

  .pastor-photo-section {
    position: relative;
  }

  .pastor-welcome-photo {
    width: 100%;
    height: auto;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-lg);
    object-fit: cover;
  }

  .pastor-message {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  /* Beliefs Section */
  .beliefs-hero-image {
    max-width: 600px;
    margin: var(--spacing-lg) auto;
    text-align: center;
  }

  .beliefs-image {
    width: 100%;
    height: auto;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-lg);
    object-fit: cover;
  }

  /* Statement of Faith */
  .statement-of-faith {
    background-color: var(--color-white);
    padding: var(--spacing-md);
    border-radius: var(--radius-lg);
    border-left: 4px solid var(--color-accent);
  }

  .statement-of-faith .lead {
    text-align: left;
    font-size: 1.1rem;
    margin-bottom: var(--spacing-md);
  }

  @media (max-width: 768px) {
    .page-header h1 {
      font-size: 2rem;
    }

    .pastor-welcome-container {
      grid-template-columns: 1fr;
      gap: var(--spacing-md);
    }

    .pastor-photo-section {
      max-width: 400px;
      margin: 0 auto;
    }

    .vision-points {
      grid-template-columns: 1fr;
    }
  }
</style>
