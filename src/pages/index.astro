---
// Homepage - The main landing page
import Layout from '../layouts/Layout.astro';
import { siteConfig } from '../config';
---

<Layout title="Home">
  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-overlay"></div>
    <div class="hero-content">
      <h1 class="hero-title">Welcome to {siteConfig.siteName}</h1>
      <p class="hero-subtitle">{siteConfig.siteTagline}</p>
      <div class="hero-actions">
        <a href="/about" class="btn btn-primary">Learn More</a>
        <a href="/contact" class="btn btn-secondary">Visit Us</a>
      </div>
    </div>
  </section>

  <!-- Welcome Message -->
  <section class="section">
    <div class="container-narrow text-center">
      <h2>Where Faith Meets Community</h2>
      <div class="western-divider">
        <span class="western-divider-icon">‚òÖ</span>
      </div>
      <p class="lead">
        Welcome to Caney Creek Cowboy Church! We're a faith community that embraces 
        both traditional Christian values and the spirit of the West. Whether you're 
        a rancher, a rider, or just someone looking for an authentic place to worship, 
        you'll find a home here.
      </p>
      <p>
        We believe in keeping things simple, genuine, and focused on what matters most: 
        faith, family, and fellowship. Join us for worship, and experience a church 
        where you can come as you are‚Äîboots, jeans, and all.
      </p>
    </div>
  </section>

  <!-- Service Times -->
  <section class="section section-dark">
    <div class="container text-center">
      <h2 style="color: var(--color-accent);">Service Times</h2>
      <div class="western-divider">
        <span class="western-divider-icon">‚òÖ</span>
      </div>
      <div class="service-times-grid">
        {siteConfig.serviceTimes.map(service => (
          <div class="service-card">
            <h3>{service.day}</h3>
            <div class="service-time">{service.time}</div>
            <div class="service-type">{service.type}</div>
            <p>{service.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Quick Navigation -->
  <section class="section">
    <div class="container">
      <h2 class="text-center">Explore Our Church</h2>
      <div class="western-divider">
        <span class="western-divider-icon">‚òÖ</span>
      </div>
      <div class="quick-nav-grid">
        <a href="/about" class="quick-nav-card">
          <div class="quick-nav-icon">üìñ</div>
          <h3>About Us</h3>
          <p>Learn about our mission, vision, and leadership</p>
        </a>
        <a href="/ministries" class="quick-nav-card">
          <div class="quick-nav-icon">üôè</div>
          <h3>Ministries</h3>
          <p>Discover opportunities to serve and grow</p>
        </a>
        <a href="/events" class="quick-nav-card">
          <div class="quick-nav-icon">üìÖ</div>
          <h3>Events</h3>
          <p>See what's happening at our church</p>
        </a>
        <a href="/gallery" class="quick-nav-card">
          <div class="quick-nav-icon">üì∏</div>
          <h3>Gallery</h3>
          <p>View photos from our church family</p>
        </a>
        <a href="/giving" class="quick-nav-card">
          <div class="quick-nav-icon">üíù</div>
          <h3>Giving</h3>
          <p>Support our mission and ministry</p>
        </a>
        <a href="/livestream" class="quick-nav-card">
          <div class="quick-nav-icon">üì°</div>
          <h3>Live Stream</h3>
          <p>Watch services online from anywhere</p>
        </a>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="section section-accent">
    <div class="container-narrow text-center">
      <h2>First Time Visitor?</h2>
      <p class="lead">
        We'd love to meet you! Come as you are and experience a warm, welcoming 
        community that celebrates faith with a western spirit.
      </p>
      <div class="cta-actions">
        <a href="/contact" class="btn btn-primary">Plan Your Visit</a>
        <a href="/livestream" class="btn btn-secondary">Watch Online</a>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Hero Section */
  .hero {
    position: relative;
    min-height: 500px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--color-primary-dark) 0%, var(--color-primary) 100%);
    color: var(--color-white);
    text-align: center;
    overflow: hidden;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      repeating-linear-gradient(
        45deg,
        transparent,
        transparent 10px,
        rgba(255, 255, 255, 0.03) 10px,
        rgba(255, 255, 255, 0.03) 20px
      );
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.3);
  }

  .hero-content {
    position: relative;
    z-index: 1;
    padding: var(--spacing-xl) var(--spacing-md);
  }

  .hero-title {
    font-size: 3rem;
    margin-bottom: var(--spacing-sm);
    color: var(--color-white);
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
  }

  .hero-subtitle {
    font-size: 1.5rem;
    margin-bottom: var(--spacing-lg);
    color: var(--color-accent);
    font-style: italic;
  }

  .hero-actions {
    display: flex;
    gap: var(--spacing-sm);
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Lead Text */
  .lead {
    font-size: 1.2rem;
    line-height: 1.8;
    margin-bottom: var(--spacing-md);
  }

  /* Service Times Grid */
  .service-times-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--spacing-md);
    margin-top: var(--spacing-lg);
  }

  .service-card {
    background-color: rgba(255, 255, 255, 0.1);
    padding: var(--spacing-md);
    border-radius: var(--radius-lg);
    border: 2px solid var(--color-accent);
  }

  .service-card h3 {
    color: var(--color-accent);
    font-size: 1.8rem;
    margin-bottom: var(--spacing-xs);
  }

  .service-time {
    font-size: 2rem;
    font-weight: bold;
    color: var(--color-white);
    margin-bottom: var(--spacing-xs);
  }

  .service-type {
    font-size: 1.2rem;
    color: var(--color-accent);
    font-style: italic;
    margin-bottom: var(--spacing-sm);
  }

  .service-card p {
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 0;
  }

  /* Quick Navigation Grid */
  .quick-nav-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--spacing-md);
    margin-top: var(--spacing-lg);
  }

  .quick-nav-card {
    background-color: var(--color-white);
    padding: var(--spacing-md);
    border-radius: var(--radius-lg);
    text-align: center;
    text-decoration: none;
    color: var(--color-text);
    box-shadow: var(--shadow-md);
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .quick-nav-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-lg);
    border-color: var(--color-accent);
    color: var(--color-text);
  }

  .quick-nav-icon {
    font-size: 3rem;
    margin-bottom: var(--spacing-sm);
  }

  .quick-nav-card h3 {
    color: var(--color-primary);
    margin-bottom: var(--spacing-xs);
  }

  .quick-nav-card p {
    color: var(--color-text-light);
    margin-bottom: 0;
  }

  /* Call to Action */
  .cta-actions {
    display: flex;
    gap: var(--spacing-sm);
    justify-content: center;
    margin-top: var(--spacing-md);
    flex-wrap: wrap;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero {
      min-height: 400px;
    }

    .hero-title {
      font-size: 2rem;
    }

    .hero-subtitle {
      font-size: 1.2rem;
    }

    .service-time {
      font-size: 1.5rem;
    }
  }
</style>
