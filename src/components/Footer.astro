---
// Footer Component
// This appears at the bottom of every page
import { siteConfig } from '../config';
---

<footer class="footer">
  <div class="container">
    <div class="footer-grid">
      <!-- Church Info -->
      <div class="footer-section">
        <h3>Caney Creek Cowboy Church</h3>
        <p>{siteConfig.siteTagline}</p>
        <div class="footer-contact">
          <p><strong>Phone:</strong> {siteConfig.contact.phone}</p>
          <p><strong>Email:</strong> {siteConfig.contact.email}</p>
        </div>
      </div>

      <!-- Quick Links -->
      <div class="footer-section">
        <h4>Quick Links</h4>
        <ul class="footer-links">
          <li><a href="/">Home</a></li>
          <li><a href="/about">About Us</a></li>
          <li><a href="/ministries">Ministries</a></li>
          <li><a href="/events">Events</a></li>
          <li><a href="/contact">Contact</a></li>
        </ul>
      </div>

      <!-- Service Times -->
      <div class="footer-section">
        <h4>Service Times</h4>
        <ul class="footer-services">
          {siteConfig.serviceTimes.map(service => (
            <li>
              <strong>{service.day}:</strong> {service.time}
              <br />
              <span class="service-type">{service.type}</span>
            </li>
          ))}
        </ul>
      </div>

      <!-- Social Media -->
      <div class="footer-section">
        <h4>Connect With Us</h4>
        <div class="social-links">
          {siteConfig.social.facebook && (
            <a href={siteConfig.social.facebook} target="_blank" rel="noopener noreferrer" aria-label="Facebook">
              ðŸ“˜
            </a>
          )}
          {siteConfig.social.instagram && (
            <a href={siteConfig.social.instagram} target="_blank" rel="noopener noreferrer" aria-label="Instagram">
              ðŸ“·
            </a>
          )}
          {siteConfig.social.youtube && (
            <a href={siteConfig.social.youtube} target="_blank" rel="noopener noreferrer" aria-label="YouTube">
              ðŸ“º
            </a>
          )}
        </div>
      </div>
    </div>

    <div class="footer-bottom">
      <p>&copy; {new Date().getFullYear()} {siteConfig.siteName}. All rights reserved.</p>
      <p class="footer-credit">Built with faith and purpose</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--color-primary-dark);
    color: var(--color-white);
    padding: var(--spacing-xl) 0 var(--spacing-md);
    margin-top: var(--spacing-xl);
  }

  .footer-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-lg);
  }

  .footer-section h3,
  .footer-section h4 {
    color: var(--color-accent);
    margin-bottom: var(--spacing-sm);
  }

  .footer-section p {
    margin-bottom: var(--spacing-xs);
    color: rgba(255, 255, 255, 0.9);
  }

  .footer-contact {
    margin-top: var(--spacing-sm);
  }

  .footer-links,
  .footer-services {
    list-style: none;
    padding: 0;
  }

  .footer-links li,
  .footer-services li {
    margin-bottom: var(--spacing-xs);
  }

  .footer-links a {
    color: rgba(255, 255, 255, 0.9);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer-links a:hover {
    color: var(--color-accent);
  }

  .service-type {
    color: var(--color-accent);
    font-size: 0.9rem;
  }

  .social-links {
    display: flex;
    gap: var(--spacing-sm);
    font-size: 2rem;
  }

  .social-links a {
    color: var(--color-white);
    text-decoration: none;
    transition: transform 0.3s ease;
  }

  .social-links a:hover {
    transform: scale(1.2);
  }

  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.2);
    padding-top: var(--spacing-md);
    text-align: center;
  }

  .footer-bottom p {
    margin-bottom: var(--spacing-xs);
    color: rgba(255, 255, 255, 0.8);
  }

  .footer-credit {
    font-style: italic;
    font-size: 0.9rem;
  }

  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-md);
    }

    .social-links {
      justify-content: center;
    }
  }
</style>
